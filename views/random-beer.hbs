<div>
    {{#each oneBeer}}
        <img class="beer-img" src={{image_url}} alt="beer image">
        <h3>{{name}}</h3>
        <h4>{{tagline}}</h4>
        <p>Description: {{description}}</p>
        <p>Food pairing: 
            <ul>
                {{#each food_pairing}} 
                <li>{{ this }}</li>
                {{/each}}
            </ul>
        </p>
        <p>Brewers tips: {{brewers_tips}}</p>
    {{/each}}
</div>